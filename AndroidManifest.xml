<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Akkad.AndroidBackup"
    android:versionCode="0"
    android:versionName="0.0-Prerelease" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".AndroidBackupActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Information Activity -->
        <activity android:name=".InformationFragment" />

        <!-- Tasks Activity -->
        <activity android:name=".TasksFragment" />

        <!-- Applications Activity -->
        <activity android:name=".ApplicationsFragment" />

        <!-- Schedule Activity -->
        <activity android:name=".ScheduleFragment" />
    </application>

</manifest>